<%
  meta title: "Learn to code by watching programming videos",
    description: description,
    keywords: ["videos", "code", "programming", "interviews", "talks", "hangouts"],
    og: {
      url: request.original_url,
      title: "Coder Speech",
      description: "Learn to code by watching programming videos",
    }
%>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2 class="oswald text-center">Learn to code by watching programming videos</h2>
    <hr class="double-margin">
  </div>
</div>
<div class="row crp-desc">
  <div class="col-sm-5 col-sm-offset-1">
    <%= image_tag @featured.image.url(:medium) %>
  </div>
  <div class="col-sm-5">
    <h3 class="text-color text-center-xs"><%= @featured.title %></h3>
    <p class="text-muted text-center-xs lh">
      <%= @featured.short_description %>
    </p>
    <p class="tags">
      <%= render partial: 'elements/tag', collection: @featured.tag_list, as: :tag %>
    </p>     
    <p class="text-center-xs">
      <%= link_to "Watch video", video_show_path(@featured.category, @featured), class: "btn btn-lg btn-default" %>
    </p>
  </div>
</div>
<div class="col-sm-12">
  <h2 class="text-center">Most viewed</h2>
  <p class="text-muted text-center">
      Checkout the most viewed videos
  </p>
  <%= render 'videos/gallery', videos: @most_viewed_videos  %>
</div>
<div class="col-sm-12">
  <h2 class="text-center">Recent Videos</h2>
  <p class="text-muted text-center">
      Checkout the recent videos
  </p>
  <%= render 'videos/gallery', videos: @latest_videos  %>
</div>