<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2 class="oswald text-center">Learn to code by watching programming videos</h2>
    <hr class="double-margin">
  </div>
</div>
<div class="row crp-desc">
  <div class="col-sm-5 col-sm-offset-1">
    <%= image_tag @featured.image.url(:medium) %>
  </div>
  <div class="col-sm-5">
    <h3 class="text-color text-center-xs"><%= @featured.title %></h3>
    <p class="text-muted text-center-xs lh">
      <%= @featured.description %>
    </p>
    <p class="tags">
      <%= render partial: 'elements/tag', collection: @featured.tag_list, as: :tag %>
    </p>     
    <p class="text-center-xs">
      <%= link_to "Watch video", video_show_path(@featured.category, @featured), class: "btn btn-lg btn-default" %>
    </p>
  </div>
</div>
<div class="col-sm-12">
  <h2 class="text-center">Most viewed</h2>
  <p class="text-muted text-center">
      Checkout the most viewed videos
  </p>
  <ul class="row list-inline glr-list">
    <% @most_viewed_videos.each do |video| %>
    <li class="col-sm-4 col-md-3">
      <%= link_to(video_show_path(video.category, video)) do %>
        <span class="glr-thumbnail">
          <%= image_tag video.image.url(:thumb) %>
          <div class="tags tags-relative">
            <%= render partial: 'elements/tag', collection: video.tag_list, as: :tag %>
          </div>          
        </span>
        <span class="glr-text">
          <span class="glr-title" style="margin-top: -20px;"><%= video.title %></span>
            <% video.description %>
          </span>
        </span>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
<div class="col-sm-12">
  <h2 class="text-center">Recent Videos</h2>
  <p class="text-muted text-center">
      Checkout the recent videos
  </p>
  <ul class="row list-inline glr-list">
    <% @latest_videos.each do |video| %>
    <li class="col-sm-4 col-md-3">
        <span class="glr-thumbnail">
          <%= link_to(video_show_path(video.category, video)) do %>
            <%= image_tag video.image.url(:thumb) %>
          <% end %>
          <div class="tags tags-relative">
            <%= render partial: 'elements/tag', collection: video.tag_list, as: :tag %>
          </div>          
        </span>
        <%= link_to(video_show_path(video.category, video)) do %>
        <span class="glr-text">
          <span class="glr-title" style="margin-top: -20px;"><%= video.title %></span>
            <% video.description %>
          </span>
        </span>
        <% end %>
    </li>
    <% end %>
  </ul>
</div>